FROM ubuntu:22.04

ENV DEBIAN_FRONTEND noninteractive
RUN apt-get update && \
    apt-get -y upgrade 

RUN apt-get update
RUN apt-get install -y -q git build-essential wget unzip && \
    apt-get clean

WORKDIR /home

# python dependency
RUN apt-get install -y python3 python3-pip
RUN python3 -m pip install coverage

# C++ dependency
RUN apt-get install -y llvm clang

# Java dependency
RUN apt-get install -y openjdk-18-jdk openjdk-18-jre
RUN wget https://github.com/jacoco/jacoco/releases/download/v0.8.11/jacoco-0.8.11.zip && unzip jacoco-0.8.11.zip
RUN rm -r coverage doc test index.html

# JS dependency
RUN apt-get install -y nodejs npm
RUN npm install -g nyc

# Go dependency
RUN apt-get install -y golang-go


RUN pip install fire tqdm
COPY evaluation/execution.py .


# header extraction
RUN pip install tree-sitter==0.20.1 returns
COPY frontend/parser frontend/parser
COPY evaluation/extract_def.py .
COPY unitsyncer/common.py unitsyncer/common.py
RUN cd frontend/parser && python3 build.py -f True
RUN export PYTHONPATH=$PYTHONPATH:$UNITSYNCER_HOME

